@model IEnumerable<DienMayQuyetTien.Models.BangSanPham>

@{
    ViewBag.Title = "Bảng Sản Phẩm";
}

<h2>Bảng Sản Phẩm</h2>

<p>
    @Html.ActionLink("Tạo sản phẩm", "Create")
</p>
<table class="BangSanPham">
    <tr>
        <th>
            Mã SP
        </th>
        <th>
            Tên SP
        </th>
        <th>
            Giá bán
        </th>
        <th>
            Giá gốc
        </th>
        <th>
            Giá góp
        </th>
        <th>
            Số lượng tồn
        </th>
        <th>
            Tên loại
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.MaSP
        </td>
        <td>
            @item.TenSP
        </td>
        <td>
            @item.GiaBan.ToString("N0")
        </td>
        <td>
            @item.GiaGoc.ToString("N0")
        </td>
        <td>
            @item.GiaGop.ToString("N0")
        </td>
        <td>
            @item.SoLuongTon
        </td>
        <td>
            @item.TenSP
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.id }) |
            @Html.ActionLink("Xem", "Details", new { id=item.id }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
